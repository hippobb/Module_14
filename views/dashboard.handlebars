<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
  <section class="card">
      <div class="card_title" style="color: white">Create New Post </div>  
      <div class="card_detail">
        </br>
        <label for="post_title">Title</label> </br>
        <input class="title" id="post_title" type="text" />
      </div>
      <div class="card_detail">
        </br>
        <label for="post_content">Content</label> </br>
        <input class="card_content" id="post_content" type="text" />
      </div>
      <div class="card_detail">
        </br> </br>
        <button class="btn_full" type="submit">+ New Post</button>
        </br> </br>
      </div>
    </section>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> edit-info post}}
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>